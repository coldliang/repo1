<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true"> 
        <shape> 
            <gradient android:startColor="@color/background_darkgreen" android:endColor="@color/background_darkgreen" 
                android:angle="270" /> 
            <stroke android:width="1dip" android:color="#DDDDDD" /> 
            <corners android:radius="10dp" /> 
            <padding android:left="20dp" android:top="1dp" 
                android:right="20dp" android:bottom="1dp" /> 
        </shape> 
    </item> 
  
  
    <item> 
        <shape> 
            <gradient android:startColor="@color/background_lightgreen" android:endColor="@color/background_lightgreen" 
                android:angle="180" /> 
            <stroke android:width="1dip" android:color="#DFDFDF" /> 
            <corners android:radius="10dp" /> 
            <padding android:left="20dp" android:top="1dp" 
                android:right="20dp" android:bottom="1dp" /> 
        </shape> 
    </item>

</selector>
