<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
		android:textSize="20sp"
		android:textStyle="italic" 
		android:padding="10dp"       
        android:text="1" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:textSize="15sp" 
        android:textStyle="italic"
        android:singleLine="true"
        android:ellipsize="end" 
        android:maxEms="10"
        android:text="Passage 1" />

    <TextView
        android:id="@+id/create_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/page"
        android:paddingLeft="10dp"
        android:textStyle="italic"
        android:textSize="12sp"
        android:textColor="#969696"
        android:text="Miss li" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/create_user"
        android:layout_toRightOf="@+id/create_user"
        android:layout_toEndOf="@+id/create_user"
        android:layout_toLeftOf="@+id/imageView1"
        android:layout_toStartOf="@+id/imageView1"
        android:singleLine="true"
        android:ellipsize="middle"
        android:textSize="12sp"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingRight="0dp"
        android:paddingEnd="0dp"
        android:textColor="#969696"
        android:text="1çº§" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/level"
        android:layout_marginRight="10dp"
         />

    

</RelativeLayout>
