<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <RelativeLayout
   	    android:id="@+id/top2" 
   	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
   	    >
    	<TextView
    	    android:id="@+id/title"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentTop="true"
    	    android:padding="5sp"
    	    android:textSize="18sp"
    	    android:textStyle="bold"
    	    android:singleLine="true"
    	    android:ellipsize="end"
    	    android:layout_centerHorizontal="true"
    	   />
    	<TextView
    	    android:id="@+id/create_user"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentLeft="true"
    	    android:layout_alignParentStart="true"
    	    android:layout_below="@+id/title"
    	    android:paddingLeft="10dp"
    	    android:paddingRight="0dp"
    	    android:paddingStart="10dp"
    	    android:paddingEnd="0dp"
    	    android:textSize="12sp"
      		android:textColor="#969696"
    	    android:text="@string/test_create_teacher_name" />
    	<TextView
    	    android:id="@+id/from"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_toRightOf="@+id/create_user"
    	    android:layout_below="@+id/title"
    	    android:paddingLeft="10dp"
    	    android:textSize="12sp"
      		android:textColor="#969696" />
    	<TextView
    	    android:id="@+id/level_icon"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:paddingLeft="10dp"
    	    android:layout_below="@+id/create_user"
    	    android:layout_alignLeft="@+id/create_user"
    	    android:textSize="12sp"
      		android:textColor="#969696"
      		android:paddingTop="8dp"
    	    android:text="@string/test_level" />
    	<TextView
    	    android:id="@+id/level"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:paddingLeft="10dp"
    	    android:layout_alignTop="@+id/level_icon"
    	    android:layout_toRightOf="@+id/level_icon"
    	    android:textSize="12sp"
    	    android:paddingTop="8dp"
      		android:textColor="#969696" 
      		/>
    	<ZoomControls
    	    android:id="@+id/zoomControls1"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentRight="true"
    	    android:layout_alignTop="@+id/create_user" 
    	    android:clickable="false"
    	    />

   	</RelativeLayout>
	    	
		<View
		    android:id="@+id/divider"
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="#D1D1D1"
		    android:layout_below="@+id/top2"
		    />
		<FrameLayout
		    android:layout_below="@+id/divider"
		    android:id="@+id/multimediaView"
		    android:layout_height="wrap_content"
		    android:layout_width="match_parent"
		    android:background="#000000"
		    android:layout_marginTop="1dp"
		    android:layout_marginBottom="1dp"
		    android:gravity="center"
		    >
		    <ViewStub
		        android:id="@+id/viewStub"
		        android:layout_width="match_parent"
		        android:layout_height="200dp"
		        android:layout="@layout/layout_video"
		        android:inflatedId="@+id/videoView"
		        android:layout_gravity="center"
		        />
		    <ViewStub
		        android:id="@+id/viewStub2"
		        android:layout_width="match_parent"
		        android:layout_height="200dp"
		        android:layout="@layout/layout_videoview_cover"
		        android:inflatedId="@+id/videoViewCover"
		        android:layout_gravity="center"
		        />
		     <ViewStub
		        android:id="@+id/viewStub3"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout="@layout/layout_audio_player"
		        android:inflatedId="@+id/audioView"
		        android:layout_gravity="center"
		        />
		</FrameLayout>
		<ScrollView
		    android:id="@+id/scrollView"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_below="@+id/multimediaView"
		    android:layout_alignParentBottom="true"
		    
		    >
		<LinearLayout
		    android:id="@+id/svCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
    	<TextView
	            android:id="@+id/content1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="3dp"
	            android:layout_marginRight="3dp"
	            android:paddingBottom="3dp"
	            android:textSize="18sp"
	            android:scrollbars="vertical"/>
    		
    	</LinearLayout>
    	</ScrollView>
    
    
</RelativeLayout>
