<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="1.in the hospital because______" />

    <TextView
        android:id="@+id/choiceA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="16dp"
        android:text="A.Allen" />

    <TextView
        android:id="@+id/choiceB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/choiceA"
        android:layout_alignBottom="@+id/choiceA"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/choiceA"
        android:text="B.Tom" />

    <TextView
        android:id="@+id/choiceC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/choiceB"
        android:layout_alignBottom="@+id/choiceB"
        android:layout_centerHorizontal="true"
        android:text="C.Jimmy" />

    <TextView
        android:id="@+id/choiceD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/choiceC"
        android:layout_alignBottom="@+id/choiceC"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/textView1"
        android:text="D.Hellen" />

    <TextView
        android:id="@+id/rightChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/choiceA"
        android:layout_marginTop="19dp"
        android:text="正确答案:A" />

    <TextView
        android:id="@+id/myChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rightChoice"
        android:layout_alignRight="@+id/choiceC"
        android:text="已选答案:C" />
    
</RelativeLayout>
